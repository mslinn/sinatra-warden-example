<form action="/auth/login" method="post">
  <p>User id: <input type="text"
                      name="user[username]"
                      placeholder="admin"
                      value="<%= user[username] %>" /></p>
  <p>Password: <input type="password"
                      name="user[password]"
                      placeholder="admin" /></p>
  <input type="submit" value="Log In" />
</form>
